{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESnext",
    "lib": ["DOM", "DOM.Iterable", "ESNext", "ESNext.Promise"],
    "rootDir": "./",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "typeRoots": ["types", "node_modules/telegram-webapps"],
    "allowUmdGlobalAccess": true
  },
  "include": ["app/**/*", "app/*", "types", "server", "redundant/bot"]
}
